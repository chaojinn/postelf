{
  "host": "localhost",
  "port": 3030,
  "coreport":3033,
  "public": "../public/",
  "paginate": {
    "default": 10,
    "max": 50
  },
  "sasl_template":["mech_liseck_method: auxprop",
    "auxprop_plugin: sql",
    "mech_list: PLAIN LOGIN CRAM-MD5 DIGEST-MD5 NTLM",
    "sql_engine: pgsql",
    "sql_hostnames: [[@dbAddress@]]",
    "sql_user: [[@dbUSer@]]",
    "sql_passwd: [[@dbPassword@]]",
    "sql_database: [[@dbName@]]",
    "sql_select: SELECT password FROM mailbox WHERE username = '%u' and domain = '%r'"],
  "dovecot_template":[
    "first_valid_uid = 1000",
    "protocols = imap pop3 lmtp",
    "listen = *, ::",
    "namespace inbox {",
    "  inbox = yes",
    "  location =",
    "  mailbox Drafts {",
    "    special_use = \\Drafts",
    "  }",
    "  mailbox Junk {",
    "    special_use = \\Junk",
    "  }",
    "  mailbox Sent {",
    "    special_use = \\Sent",
    "  }",
    "  mailbox \"Sent Messages\" {",
    "    special_use = \\Sent",
    "  }",
    "  mailbox Trash {",
    "    special_use = \\Trash",
    "  }",
    "  prefix =",
    "}",
    "auth_mechanisms = plain login",
    "mail_location = maildir:[[@baseMailFolder@]]/%d/%n/",
    "ssl = yes",
    "ssl_cert = </etc/postfix/certs/server.crt",
    "ssl_key = </etc/postfix/certs/server.key",
    "passdb {",
    "  args = /etc/dovecot/dovecot-sql.conf",
    "  driver = sql",
    "}",
    "userdb {",
    "  args = /etc/dovecot/dovecot-sql.conf",
    "  driver = sql",
    "}"
  ],
  "dovecot_auth_template":["driver = pgsql",
    "connect = host=[[@dbAddress@]] dbname=[[@dbName@]] user=[[@dbUSer@]] password=[[@dbPassword@]]",
    "default_pass_scheme = plain",
    "password_query = SELECT username||'@'||domain as user,  password FROM mailbox WHERE username||'@'||domain = '%u'",
    "user_query = SELECT '[[@baseMailFolder@]]/%d'||'/%n' AS home, 'maildir:'||'[[@baseMailFolder@]]/%d'||'/%n'||'/mail' AS mail, [[@uid@]] as uid ,[[@gid@]] as gid FROM domain WHERE domain = '%d'"
  ],
  "pfx_virtual_template":[
    "hosts = [[@dbAddress@]]",
    "user = [[@dbUSer@]]",
    "password = [[@dbPassword@]]",
    "dbname = [[@dbName@]]",
    "query = SELECT username||'@'||domain,username||'@'||domain FROM mailbox WHERE username='%u' and domain='%d'"
  ],
  "pfx_vmailbox_template":[
    "user=[[@dbUSer@]]",
    "password=[[@dbPassword@]]",
    "dbname=[[@dbName@]]",
    "hosts=[[@dbAddress@]]",
    "query=select domain||'/'||username||'/mail/' from mailbox where username='%u' and domain='%d'"
  ],
  "pfx_main":[
    "alias_database = hash:/etc/aliases",
    "alias_maps = hash:/etc/aliases",
    "command_directory = /usr/sbin",
    "compatibility_level = 2",
    "cyrus_sasl_config_path = /etc/sasl2/",
    "daemon_directory = /usr/libexec/postfix",
    "data_directory = /var/lib/postfix",
    "debugger_command = ",
    "                 PATH=/bin:/usr/bin:/usr/local/bin:/usr/X11R6/bin",
    "                 ddd $daemon_directory/$process_name $process_id & sleep 5",
    "header_size_limit = 4096000",
    "home_mailbox = mail/",
    "html_directory = no",
    "inet_interfaces = all",
    "inet_protocols = all",
    "mail_owner = postfix",
    "mailbox_size_limit = 512000000",
    "mailq_path = /usr/bin/mailq.postfix",
    "manpage_directory = /usr/share/man",
    "message_size_limit = 51200000",
    "meta_directory = /etc/postfix",
    "mydestination = $myhostname, localhost.$mydomain, localhost",
    "mydomain = localdomain",
    "myhostname = localhost.com",
    "mynetworks = 127.0.0.0/8 [::1]/128",
    "myorigin = $mydomain",
    "newaliases_path = /usr/bin/newaliases.postfix",
    "queue_directory = /var/spool/postfix",
    "readme_directory = /usr/share/doc/postfix-2.10.1/README_FILES",
    "sample_directory = /usr/share/doc/postfix-2.10.1/samples",
    "sendmail_path = /usr/sbin/sendmail.postfix",
    "setgid_group = postdrop",
    "shlib_directory = no",
    "smtp_sasl_auth_enable = yes",
    "smtp_sasl_security_options = noanonymous",
    "smtp_tls_note_starttls_offer = yes",
    "smtp_tls_security_level = encrypt",
    "smtpd_sasl_auth_enable = yes",
    "smtpd_sasl_local_domain = $mydomain",
    "smtpd_sasl_path = smtpd",
    "smtpd_sasl_security_options = noanonymous",
    "smtpd_sasl_type = cyrus",
    "smtputf8_enable = no",
    "tls_random_source = dev:/dev/urandom",
    "transport_maps = static:virtual",
    "unknown_local_recipient_reject_code = 550",
    "virtual_alias_maps = pgsql:/etc/postfix/virtual.cf",
    "virtual_gid_maps = static:[[@gid@]]",
    "virtual_mailbox_base = [[@baseMailFolder@]]",
    "virtual_mailbox_maps = pgsql:/etc/postfix/vmailbox.cf",
    "virtual_uid_maps = static:[[@uid@]]"
  ],
  "pfx_master":[
    "smtp      inet  n       -       n       -       -       smtpd",
    "smtpd     pass  -       -       n       -       -       smtpd",
    "submission inet n       -       n       -       -       smtpd",
    "  -o smtpd_tls_auth_only=yes",
    "  -o smtpd_tls_cert_file=/etc/postfix/certs/server.crt",
    "  -o smtpd_tls_key_file=/etc/postfix/certs/server.key",
    "  -o smtpd_tls_loglevel=1",
    "  -o smtpd_tls_received_header=yes",
    "  -o smtpd_tls_session_cache_timeout=3600s",
    "  -o syslog_name=postfix/submission",
    "  -o smtpd_tls_security_level=encrypt",
    "  -o milter_macro_daemon_name=ORIGINATING",
    "pickup    unix  n       -       n       60      1       pickup",
    "cleanup   unix  n       -       n       -       0       cleanup",
    "qmgr      unix  n       -       n       300     1       qmgr",
    "tlsmgr    unix  -       -       n       1000?   1       tlsmgr",
    "rewrite   unix  -       -       n       -       -       trivial-rewrite",
    "bounce    unix  -       -       n       -       0       bounce",
    "defer     unix  -       -       n       -       0       bounce",
    "trace     unix  -       -       n       -       0       bounce",
    "verify    unix  -       -       n       -       1       verify",
    "flush     unix  n       -       n       1000?   0       flush",
    "proxymap  unix  -       -       n       -       -       proxymap",
    "proxywrite unix -       -       n       -       1       proxymap",
    "smtp      unix  -       -       n       -       -       smtp",
    "relay     unix  -       -       n       -       -       smtp",
    "showq     unix  n       -       n       -       -       showq",
    "error     unix  -       -       n       -       -       error",
    "retry     unix  -       -       n       -       -       error",
    "discard   unix  -       -       n       -       -       discard",
    "local     unix  -       n       n       -       -       local",
    "virtual   unix  -       n       n       -       -       virtual",
    "lmtp      unix  -       -       n       -       -       lmtp",
    "anvil     unix  -       -       n       -       1       anvil",
    "scache    unix  -       -       n       -       1       scache"
  ]
}
